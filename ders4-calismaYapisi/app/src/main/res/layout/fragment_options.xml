<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.OptionsFragment">

   <TextView
       android:id="@+id/optionsFragmentTextView"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="burası options fragment"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginTop="100dp"
         android:textSize="34sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ButtonGoster"
        app:layout_constraintTop_toBottomOf="@+id/optionsFragmentTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        android:text="Göster"
        android:textSize="24sp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>